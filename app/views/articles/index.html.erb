<div class="container mt-4">
  <h1 class="text-center mb-4">Articles</h1>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to '<i class="fas fa-plus"></i> New Article'.html_safe, new_article_path, class: "btn btn-primary" %>
  </div>

  <div class="list-group">
    <% @articles.each do |article| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to "<i class='fas fa-file-alt'></i> #{article.title}".html_safe, article_path(article), class: "fw-bold" %>
        <div>
          <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_article_path(article), class: "btn btn-warning btn-sm mx-1" %>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
