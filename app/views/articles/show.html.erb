<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title"><i class="fas fa-book"></i> <%= @article.title %></h1>
      <p class="card-text"><%= @article.content %></p>

      <div class="d-flex justify-content-between">
        <%= link_to '<i class="fas fa-edit"></i> Edit'.html_safe, edit_article_path(@article), class: "btn btn-warning" %>
        <%= link_to '<i class="fas fa-arrow-left"></i> Back'.html_safe, articles_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
